{
  "hadiths": [
    {
      "id": 1,
      "number": 1,
      "title": "حديث جبريل في الإسلام والإيمان والإحسان",
      "text": "عن عمر بن الخطاب رضي الله عنه قال: بينما نحن عند رسول الله صلى الله عليه وسلم ذات يوم إذ طلع علينا رجل شديد بياض الثياب شديد سواد الشعر لا يرى عليه أثر السفر ولا يعرفه منا أحد، حتى جلس إلى النبي صلى الله عليه وسلم فأسند ركبتيه إلى ركبتيه ووضع كفيه على فخذيه وقال: يا محمد أخبرني عن الإسلام، فقال رسول الله صلى الله عليه وسلم: الإسلام أن تشهد أن لا إله إلا الله وأن محمداً رسول الله وتقيم الصلاة وتؤتي الزكاة وتصوم رمضان وتحج البيت إن استطعت إليه سبيلاً",
      "narrator": "عمر بن الخطاب",
      "source": "صحيح مسلم (8)، صحيح البخاري (50)",
      "grade": "صحيح متفق عليه",
      "category": "العقيدة"
    },
    {
      "id": 2,
      "number": 2,
      "title": "أركان الإيمان",
      "text": "عن أبي هريرة رضي الله عنه قال: قال رسول الله صلى الله عليه وسلم: الإيمان بضع وسبعون أو بضع وستون شعبة، فأفضلها قول لا إله إلا الله، وأدناها إماطة الأذى عن الطريق، والحياء شعبة من الإيمان",
      "narrator": "أبو هريرة",
      "source": "صحيح مسلم (35)، صحيح البخاري (9)",
      "grade": "صحيح متفق عليه",
      "category": "العقيدة"
    },
    {
      "id": 3,
      "number": 3,
      "title": "حلاوة الإيمان",
      "text": "عن أنس بن مالك رضي الله عنه عن النبي صلى الله عليه وسلم قال: ثلاث من كن فيه وجد حلاوة الإيمان: أن يكون الله ورسوله أحب إليه مما سواهما، وأن يحب المرء لا يحبه إلا لله، وأن يكره أن يعود في الكفر كما يكره أن يقذف في النار",
      "narrator": "أنس بن مالك",
      "source": "صحيح البخاري (16)، صحيح مسلم (43)",
      "grade": "صحيح متفق عليه",
      "category": "الإيمان"
    },
    {
      "id": 4,
      "number": 4,
      "title": "علامات النفاق",
      "text": "عن أبي هريرة رضي الله عنه عن النبي صلى الله عليه وسلم قال: آية المنافق ثلاث: إذا حدث كذب، وإذا وعد أخلف، وإذا اؤتمن خان",
      "narrator": "أبو هريرة",
      "source": "صحيح البخاري (33)، صحيح مسلم (59)",
      "grade": "صحيح متفق عليه",
      "category": "الأخلاق"
    },
    {
      "id": 5,
      "number": 5,
      "title": "الإيمان يزيد وينقص",
      "text": "عن أبي سعيد الخدري رضي الله عنه عن النبي صلى الله عليه وسلم قال: يخرج من النار من قال لا إله إلا الله وفي قلبه وزن ذرة من خير",
      "narrator": "أبو سعيد الخدري",
      "source": "صحيح البخاري (44)",
      "grade": "صحيح",
      "category": "الإيمان"
    },
    {
      "id": 6,
      "number": 6,
      "title": "فضل التوحيد",
      "text": "عن أنس رضي الله عنه قال: قال رسول الله صلى الله عليه وسلم: يقول الله تعالى لأهون أهل النار عذاباً يوم القيامة: لو أن لك ما في الأرض من شيء أكنت تفتدي به؟ فيقول: نعم، فيقول: قد أردت منك أهون من هذا وأنت في صلب آدم أن لا تشرك بي شيئاً فأبيت إلا أن تشرك بي",
      "narrator": "أنس بن مالك",
      "source": "صحيح البخاري (6557)، صحيح مسلم (2805)",
      "grade": "صحيح متفق عليه",
      "category": "التوحيد"
    },
    {
      "id": 7,
      "number": 7,
      "title": "من مات لا يشرك بالله",
      "text": "عن عبد الله بن مسعود رضي الله عنه قال: قال رسول الله صلى الله عليه وسلم: من مات وهو يدعو من دون الله نداً دخل النار",
      "narrator": "عبد الله بن مسعود",
      "source": "صحيح البخاري (4497)",
      "grade": "صحيح",
      "category": "التوحيد"
    },
    {
      "id": 8,
      "number": 8,
      "title": "القضاء والقدر",
      "text": "عن ابن عباس رضي الله عنهما قال: كنت خلف النبي صلى الله عليه وسلم يوماً فقال: يا غلام إني أعلمك كلمات: احفظ الله يحفظك، احفظ الله تجده تجاهك، إذا سألت فاسأل الله، وإذا استعنت فاستعن بالله، واعلم أن الأمة لو اجتمعت على أن ينفعوك بشيء لم ينفعوك إلا بشيء قد كتبه الله لك، ولو اجتمعوا على أن يضروك بشيء لم يضروك إلا بشيء قد كتبه الله عليك، رفعت الأقلام وجفت الصحف",
      "narrator": "عبد الله بن عباس",
      "source": "سنن الترمذي (2516)",
      "grade": "صحيح - صححه الترمذي والألباني",
      "category": "القدر"
    },
    {
      "id": 9,
      "number": 9,
      "title": "الإيمان بالقدر",
      "text": "عن جابر بن عبد الله رضي الله عنه قال: قال رسول الله صلى الله عليه وسلم: لا يؤمن عبد حتى يؤمن بالقدر خيره وشره حتى يعلم أن ما أصابه لم يكن ليخطئه وما أخطأه لم يكن ليصيبه",
      "narrator": "جابر بن عبد الله",
      "source": "سنن الترمذي (2144)",
      "grade": "حسن - حسنه الترمذي والألباني",
      "category": "القدر"
    },
    {
      "id": 10,
      "number": 10,
      "title": "كلمة التوحيد",
      "text": "عن عثمان بن عفان رضي الله عنه قال: قال رسول الله صلى الله عليه وسلم: من مات وهو يعلم أنه لا إله إلا الله دخل الجنة",
      "narrator": "عثمان بن عفان",
      "source": "صحيح مسلم (26)",
      "grade": "صحيح",
      "category": "التوحيد"
    }
